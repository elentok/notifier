= simple_form_for(@message, html: { class: 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :sender_id, as: :hidden
    = f.association :recipients, input_html: { class: 'input-xlarge chosen', data: { placeholder: 'Please select recipients' } }
    = f.input :title, input_html: { class: 'input-xlarge' }
    = f.input :body, input_html: { rows: 8, class: 'input-xlarge' }

  .form-actions
    = f.button :submit, class: 'btn-primary'
