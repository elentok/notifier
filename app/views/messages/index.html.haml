.page-header
  %h1 Messages

%ul.messages
  - @messages.each do |message|
    %li
      %i.icon-envelope
      .message-data
        .from= message.sender
        .title
          = link_to message.title, message
        .body= message.body
      .actions
        = link_to edit_message_path(message),
          class: 'btn btn-mini btn-success' do
          %i.icon-pencil.icon-white

        = link_to message, 
          :confirm => t(:are_you_sure, default: "Are you sure?"), :method => :delete,
          class: 'btn btn-mini btn-danger' do
          %i.icon-trash.icon-white

%br

= link_to new_message_path, class: 'btn btn-success' do
  %i.icon-plus.icon-white
  = t(:new_message)

